<mvc:View controllerName="sap.ui.demo.masterdetail.controller.StockMonitor" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core">
	<App>
		<pages>
<!-- 			<Page title="Login">
        		<content>
